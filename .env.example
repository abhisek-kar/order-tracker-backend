# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Redis (use cloud Redis service like Upstash, Redis Cloud, etc.)
REDIS_URI=redis://user:password@host:port
# OR if using individual Redis configs
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT
JWT_SECRET=your-super-secret-jwt-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin User
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@yourapp.com
ADMIN_PASSWORD=SecurePassword123!

# Agent User  
AGENT_NAME=Agent User
AGENT_EMAIL=agent@yourapp.com
AGENT_PASSWORD=SecurePassword123!
